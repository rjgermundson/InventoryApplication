<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/inflateParent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/darkGray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/inflateParent"
            app:layout_constraintLeft_toLeftOf="@+id/inflateParent">

            <TextView
                android:id="@+id/productIdentifier"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:textColor="@color/darkGray"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@color/superLightGray"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>